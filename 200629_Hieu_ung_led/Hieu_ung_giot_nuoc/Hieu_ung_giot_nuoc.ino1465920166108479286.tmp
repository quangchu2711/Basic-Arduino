int SDI_pin = 7;
int SCK_pin = 9;
int RCK_pin = 8;

void setup() 
{
  pinMode(SDI_pin, OUTPUT);
  pinMode(SCK_pin, OUTPUT);
  pinMode(RCK_pin, OUTPUT);
}

void shift_out(byte data)
{
  for(int i = 0; i <= 7; i++)
  {
    digitalWrite(SDI_pin, (data & 128) != 0);
    data = data << 1;
    digitalWrite(SCK_pin, HIGH);
    digitalWrite(SCK_pin, LOW);
  }
  digitalWrite(RCK_pin, HIGH);
  digitalWrite(RCK_pin, LOW);
}


int output = 0x00;
void set_led(int val, int state)
{
  if(state == HIGH)
  {
    output = output | (1 << val);
    shift_out(output);
  }
  else
  {
    output = output & ~(1 << val);
    shift_out(output); 
  }
}

void loop() 
{
  set_led(3, HIGH);
  set_led(4, HIGH);
  delay(500);
  set_led(3, LOW);
  set_led(4, LOW);
  delay(500);

}
